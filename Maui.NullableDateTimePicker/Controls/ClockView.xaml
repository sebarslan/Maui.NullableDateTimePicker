<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawables="clr-namespace:Maui.NullableDateTimePicker.Controls"
             x:Class="Maui.NullableDateTimePicker.Controls.ClockView"
             x:ClassModifier="NotPublic">
    <ContentView.Resources>
        <ResourceDictionary>
            <drawables:ClockDrawable x:Key="clockDrawable" />
            <RoundRectangle x:Key="LeftRoundedShape" CornerRadius="20,0,20,0" />
            <RoundRectangle x:Key="RightRoundedShape" CornerRadius="0,20,0,20" />
            <RoundRectangle x:Key="RoundedShape" CornerRadius="20,20,20,20" />
        </ResourceDictionary>
    </ContentView.Resources>

    <StackLayout Orientation="Vertical">

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="10" Spacing="10">

            <HorizontalStackLayout Spacing="0">
                <!-- AM Button -->
                <drawables:ButtonTemplate x:Name="ClockAmButton"                           
                    Text="AM"
                    Clicked="OnAmButtonClicked" 
                    StrokeShape="{StaticResource LeftRoundedShape}"
                    HorizontalOptions="Fill"
                    HeightRequest="{OnPlatform WinUI=35, Default=40}" />
                <!-- PM Button -->
                <drawables:ButtonTemplate x:Name="ClockPmButton"                           
                     Text="PM"
                     Clicked="OnPmButtonClicked" 
                     StrokeShape="{StaticResource RightRoundedShape}"        
                     HorizontalOptions="Fill" 
                     HeightRequest="{OnPlatform WinUI=35, Default=40}" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="0">
                <!-- Hour Button -->
                <drawables:ButtonTemplate x:Name="ClockHourButton"
                    Text="Hour"
                    Clicked="OnHourButtonClicked" 
                    StrokeShape="{StaticResource LeftRoundedShape}"
                    HorizontalOptions="Fill"
                    HeightRequest="{OnPlatform WinUI=35, Default=40}"/>
                <!-- Minute Button -->
                <drawables:ButtonTemplate x:Name="ClockMinuteButton"
                    Text="Minute"
                    Clicked="OnMinuteButtonClicked" 
                    StrokeShape="{StaticResource RightRoundedShape}"
                    HorizontalOptions="Fill"
                    HeightRequest="{OnPlatform WinUI=35, Default=40}" />
            </HorizontalStackLayout>

        </StackLayout>
        <GraphicsView x:Name="graphicsView"
              Drawable="{StaticResource clockDrawable}"
              HeightRequest="200"
              WidthRequest="200">
            <GraphicsView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnGraphicsTapped" NumberOfTapsRequired="1" />
            </GraphicsView.GestureRecognizers>
        </GraphicsView>
    </StackLayout>
</ContentView>
